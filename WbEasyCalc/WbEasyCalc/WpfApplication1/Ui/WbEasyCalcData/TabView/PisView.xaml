<UserControl x:Class="WpfApplication1.Ui.WbEasyCalcData.TabView.PisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:WpfApplication1.Converters" 
             mc:Ignorable="d" 
             >
    
    <!--
    Text="{Binding Path=Model.UnauthCons_IllegalConnDomEstNo_D6}"
    Text="{Binding Path=Model.IllegalConnectionsOthersEstimatedNumber_D10}"    
    -->
    
    <UserControl.Resources>
        <converters:FloatConverter x:Key="FloatConverter" />
        <converters:PercentageConverter  x:Key="PercentageConverter" />
        <converters:BooleanFlagSwitchConverter  x:Key="NegConverter" />

        <Style x:Key ="LabelSpanTitleBaseStyle" TargetType="Label">
            <Setter Property = "BorderBrush" Value ="White"/>
            <Setter Property = "BorderThickness" Value = "1"/>
            <Setter Property = "Margin" Value = "0 0 10 10"/>
            <Setter Property = "Foreground" Value = "White"/>
            <Setter Property = "FontWeight" Value = "Bold"/>
            <Setter Property = "VerticalContentAlignment" Value = "Center"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Center"/>
            <Setter Property = "Padding" Value = "0 3"/>
            <Setter Property = "FontSize" Value = "16"/>
        </Style>
        <Style x:Key ="LabelSpanTitleDarkStyle" TargetType="Label" BasedOn="{StaticResource LabelSpanTitleBaseStyle}">
            <Setter Property = "Background" Value = "#FF265B87"/>
        </Style>
        <Style x:Key ="LabelSpanTitleLightStyle" TargetType="Label" BasedOn="{StaticResource LabelSpanTitleBaseStyle}">
            <Setter Property = "Background" Value = "#77265B87"/>
        </Style>

        <Style x:Key ="LabelSpanTitleWhiteStyle" TargetType="Label" BasedOn="{StaticResource LabelSpanTitleBaseStyle}">
            <Setter Property = "BorderBrush" Value ="Black"/>
            <Setter Property = "Background" Value = "White"/>
            <Setter Property = "Foreground" Value = "Black"/>
        </Style>

        <Style x:Key ="LabelBaseStyle" TargetType="Label">
            <Setter Property = "BorderBrush" Value ="White"/>
            <Setter Property = "BorderThickness" Value = "1"/>
            <Setter Property = "Margin" Value = "0 0 10 10"/>
            <Setter Property = "Foreground" Value = "White"/>
            <Setter Property = "FontWeight" Value = "Bold"/>
            <Setter Property = "VerticalContentAlignment" Value = "Center"/>
            <Setter Property = "Padding" Value = "5 10"/>
        </Style>

        <Style x:Key ="LabelSteelBlueStyle" TargetType="Label" BasedOn="{StaticResource LabelBaseStyle}">
            <Setter Property = "Background" Value = "SteelBlue"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Right"/>
        </Style>

        <Style x:Key ="LabelRowTitleStyle" TargetType="Label" BasedOn="{StaticResource LabelBaseStyle}">
            <Setter Property = "Background" Value = "#FF265B87"/>
            <Setter Property = "HorizontalContentAlignment" Value = "Left"/>
        </Style>

        <Style x:Key ="LabelColTitleStyle" TargetType="Label" BasedOn="{StaticResource LabelBaseStyle}">
            <Setter Property = "HorizontalContentAlignment" Value = "Center"/>
            <Setter Property = "Background" Value = "#FF265B87"/>
        </Style>
        <Style x:Key ="LabelTitle1Style" TargetType="Label" BasedOn="{StaticResource LabelColTitleStyle}" >
            <Setter Property = "Content" Value = "Best Estimate"/>
        </Style>
        <Style x:Key ="LabelTitle2Style" TargetType="Label" BasedOn="{StaticResource LabelColTitleStyle}" >
            <Setter Property = "Content" Value = "Error Margin&#10;     [+/-%]"/>
        </Style>
        <Style x:Key ="LabelTitle3Style" TargetType="Label" BasedOn="{StaticResource LabelColTitleStyle}" >
            <Setter Property = "Content" Value = "Person per&#10;    House"/>
        </Style>
        <Style x:Key ="LabelTitle4Style" TargetType="Label" BasedOn="{StaticResource LabelColTitleStyle}" >
            <Setter Property = "Content" Value = "     Consumption&#10;[Litres/person/day]"/>
        </Style>
    </UserControl.Resources>
    <Grid >
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Background="LightBlue">
                <Grid Grid.Row="0" Margin="10" >
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition  />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.ColumnSpan="5" Content="Performance Indicator" Style="{StaticResource LabelSpanTitleDarkStyle}" />
                    <Label Grid.Row="1" Grid.ColumnSpan="5" Content="Level of Service" Style="{StaticResource LabelSpanTitleLightStyle}" />
                
                    <Label Grid.Row="2" Grid.Column="1"  Style="{StaticResource LabelTitle1Style}" />
                    <Label Grid.Row="2" Grid.Column="2"  Style="{StaticResource LabelTitle2Style}" />
                    <Label Grid.Row="2" Grid.Column="3"  Style="{StaticResource LabelTitle3Style}" />
                    <Label Grid.Row="2" Grid.Column="4"  Style="{StaticResource LabelTitle4Style}" />

                    <Label Grid.Row="3" Grid.Column="0" Content="Average Supply Time [h/day]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="3" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="3" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="3" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="3" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />

                    <Label Grid.Row="4" Grid.Column="0" Content="Average Pressure [m]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="4" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="4" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="4" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="4" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />

                
                
                                
                
                    <Label Grid.Row="5" Grid.ColumnSpan="5" Content="Level of Service" Style="{StaticResource LabelSpanTitleLightStyle}" />
                                
                    <Label Grid.Row="6" Grid.Column="1"  Style="{StaticResource LabelTitle1Style}" />
                    <Label Grid.Row="6" Grid.Column="2"  Style="{StaticResource LabelTitle2Style}" />
                    <Label Grid.Row="6" Grid.Column="3"  Style="{StaticResource LabelTitle3Style}" />
                    <Label Grid.Row="6" Grid.Column="4"  Style="{StaticResource LabelTitle4Style}" />

                    <Label Grid.Row="7" Grid.Column="0" Content="CAPL - Current Annual Volume of&#10;Phisical Losses [m3/day]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="7" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="7" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="7" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="7" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />

                    <Label Grid.Row="8" Grid.Column="0" Content="MAPL - Minimum Achievable Volume&#10;of Phisical Losses [m3/day]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="8" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="8" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="8" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="8" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                                
                
                
                
                    <Label Grid.Row="9" Grid.ColumnSpan="5" Content="Level of Service" Style="{StaticResource LabelSpanTitleLightStyle}" />

                    <Label Grid.Row="9" Grid.Column="5"  Grid.ColumnSpan="2" Content="Performance Group" Style="{StaticResource LabelSpanTitleWhiteStyle}" />
                
                    <Label Grid.Row="10" Grid.Column="1"  Style="{StaticResource LabelTitle1Style}" />
                    <Label Grid.Row="10" Grid.Column="2"  Style="{StaticResource LabelTitle2Style}" />
                    <Label Grid.Row="10" Grid.Column="3"  Style="{StaticResource LabelTitle3Style}" />
                    <Label Grid.Row="10" Grid.Column="4"  Style="{StaticResource LabelTitle4Style}" />
                    <Label Grid.Row="10" Grid.Column="5"  Content="Group xxxxxxxxxx" Style="{StaticResource LabelSpanTitleLightStyle}" />
                    <Label Grid.Row="10" Grid.Column="6"  Content="Group bbbbbbbbbb" Style="{StaticResource LabelSpanTitleLightStyle}" />

                    <Label Grid.Row="11" Grid.Column="0" Content="CAPL - Current Annual Volume of&#10;Phisical Losses [m3/day]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="11" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="11" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="11" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="11" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />

                    <Label Grid.Row="12" Grid.Column="0" Content="MAPL - Minimum Achievable Volume&#10;of Phisical Losses [m3/day]" Style="{StaticResource LabelRowTitleStyle}"  />
                    <Label Grid.Row="12" Grid.Column="1" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="12" Grid.Column="2" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="12" Grid.Column="3" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                    <Label Grid.Row="12" Grid.Column="4" Content="22.33" Style="{StaticResource LabelSteelBlueStyle}"  />
                                
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>

</UserControl>
